<link rel="stylesheet" href="/Content/login.css">
<div class="Login-From-Section">
    <div class="Login-Container">
                  <h1 class="Login-h1">Register</h1>
            <h3 class="Login-h3">Register to join others around the world in your workout routines!</h3>
            {{#if messages}} 
         <h3 class="alert alert-danger">{{messages}}</h3>
            {{/if}}
                <div class="Login-Form">
                    <form class="Login-form" id="login" action="/auth/register" method="post">
                    <div class="Login-Input2">
                        <input name="username" type="text" id="username" required autocomplete="off">
                        <label for="username">Username: </label>
                        
                    </div>
                    <div class="Login-Input2">                        
                        <input name="password" type="password" id="password" required autocomplete="off">
                        <label  for="password">Password: </label>
                        </div>
                        <button class="Login-btn" onclick="">Register</button>
                        </div>
                    </form>