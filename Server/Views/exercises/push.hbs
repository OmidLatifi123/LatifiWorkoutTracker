<h1 class="exH1">Push Page</h1>
{{#if user}}
<div class="btnContainer">
    <a href="/exercises/createPush"><button class="createbtn">Create Push</button></a>
</div>
{{else}}
<div class="btnContainer">
    <a href="/auth/login"><button class="createbtn">Create Push</button></a>
</div>
{{/if}}

<div class="container">
    <div class=" card-rows row justify-content-center">
        {{#each push}}
        <div class="exCard m-2 text-center col-lg-2">
            <div class="card-body">
                <p class="exP">{{this.reps}}</p>       
                <h6 class="exH6">{{this.title}}</h6>
                <p class="exP">{{{this.description}}}</p>
                {{#if ../user}}
                <a href="/exercises/editPush/{{this._id}}" class="btn btn-primary">
                    Edit
                </a>
                <a href="/exercises/deletePush/{{this._id}}" class="btn btn-primary">
                    Delete
                </a>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>
